<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jobby.Controller">
  <Label text="Jobby" />
  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="6.0">
     <children>
        <Label text="Query" />
         <TextArea prefHeight="300.0" prefWidth="400.0" />
     </children>
      <VBox.margin>
         <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
      </VBox.margin>
  </HBox>
  <Button mnemonicParsing="false" onAction="#countWords" text="Let's Get Counting!" />
</VBox>
